{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

    <h1>Mon profil</h1>


    <h2>Mes Post</h2>
    <div>
        {% for post in userPosts %}
            {% include '_partials/_post.html.twig' %}
        {% endfor %}
    </div>
    <h2>Mes commentaires</h2>
    <div>
        {% for post in userComments %}
            {% include '_partials/_post.html.twig' with {
                'message': post,
            } %}
        {% endfor %}
    </div>

{% endblock %}
