{% set messageLiked = has_user_reacted(app.user, post) %}

<div class="post">
    <div class="post-top">
        <div>
            <h2>{{ post.title }} </h2>
            {% if post.parent is not null %}
                <small>Réponse à {{ post.parent.id }}</small>
            {% endif %}
        </div>
        <div class="post-user">
            <div>
                <h3> <a href="{{ path('app_profile', {'id': post.id }) }}">@{{ post.user.username}}</a></h3>
            </div>
            {% if post.category is not null %}
                <div>
                    <h3>{{ post.category.name }}</h3>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="post-middle">
        {% if post.image is not null %}
            <img src="{{ post.image }}" alt="image-post">
        {% endif %}
        <p> {{ post.content }} </p>
    </div>
    <div class="post-bottom">
        <div class="likes" data-block-likes="{{ post.id }}">
            {% include '_partials/_block_likes.html.twig' %}
        </div>
        {% if answer is not defined %}
            <div class="comment-number">
                <div>
                    <a href="{{ path("app_post_show", {'id': post.id }) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-chat" viewBox="0 0 16 16">
                            <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105"/>
                        </svg></a>
                </div>
                <div>
                    {% set number = get_number(post) %}
                    <p>{{ number }}</p>
                </div>
            </div>
        {% else %}
            <button data-message-response="{{ path('app_submit_post', {'id': post.id}) }}">Répondre</button>
        {% endif %}
    </div>
</div>
