{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}



    {% if searchQuery %}
        <h1>Recherche</h1>
        <div class="recherche-resultat">
            <p>Résultat de votre recherche: <strong> " {{ searchQuery }} " </strong></p>
        </div>
    {% else %}
        <h1>Fil d'actualité</h1>
    {% endif %}

<div class="post-container">
    {% for post in lastPost %}
        {% include '_partials/_post.html.twig' %}
    {% endfor %}
</div>
{% endblock %}
